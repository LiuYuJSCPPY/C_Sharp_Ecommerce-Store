

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form class="row g-3">
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">分類的名字:</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="分類的名字">
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">上傳圖案:</label>
                <input class="form-control" type="file" id="formFile">
                <img id="ActionImage" src="#" />
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
    </div>
</div>

<script>
    $("#formFile").change(function () {
        readURL(this);
    });

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#ActionImage").attr("src", e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    };

</script>
