@model EcommerceStore.Web.Areas.Admin.ViewModel.EcommerceStoreDiscount


@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">折扣活動</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="ActionForm">
                <input type="hidden" name="Id" value="@Model.Id">
                <div class="mb-3">
                    <h4 for="exampleInputEmail1" class="form-label">活動名稱</h4>
                    <input type="text" class="form-control" id="DiscountName" name="Name" value="@Model.Name">
                </div>

                <div class="mb-3">
                    <h4 for="exampleInputEmail1" class="form-label">折扣</h4>
                    <input type="number" step=0.01 class="form-control" id="Discountpreceint" name="DiscountPreceint" value="@Model.DiscountPreceint">
                </div>

                <div class="mb-3">

                    <div class="row g-2">

                        <div class="col">
                            <label class="form-label">開始日期</label>
                            
                            <input type="text" id="StartDiscountTime" class="form-control" value="@Model.StartDiscount.ToString("yyyy-MMM-dd")">
                        </div>
                        <div class="col">
                            <label class="form-label">結束日期</label>
                            <input type="text" id="EndDiscountTime" class="form-control" value="@Model.EndDiscount.ToString("yyyy-MMM-dd")">
                        </div>
                    </div>
                </div>


                <div class="mb-3">
                    <h4 class="form-label">活動內容</h4>
                    <div class="form-floating">
                        <textarea class="form-control" id="DescriptionDiscount" name="Description" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px">@Model.Description</textarea>
                        <label for="floatingTextarea2">內容</label>
                    </div>
                </div>

                <div class="mb-3">
                    <h4 for="formFile" class="form-label">活動圖片</h4>
                    <input id="DiscountImageView" class="form-control" name="DiscountImage" type="file" id="formFile">
                    <div class="text-center">
                        <img id="DiscountImageView" src="" class="rounded" width="200">
                    </div>

                </div>


                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" name="enabled" id="DiscountEnabledTrue" value="@Model.enabled">
                    <label class="form-check-label" for="flexSwitchCheckDefault">是否公開</label>
                </div>

            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
            <button id="SaveButton" type="button" class="btn btn-primary">儲存</button>
        </div>
        <div class="alert alert-danger" role="alert" id="ErrorDiscount">

        </div>
    </div>

}

    <script>
    $("#DiscountImage").change(function () {
        readURL(this);
    });
    function readURL(input) {
        if (input.files && input.files[0]) {
            var vendor = new FileReader();
            vendor.onload = function (e) {
                $("#DiscountImageView").attr("src", e.target.result);
            }
            vendor.readAsDataURL(input.files[0]);
        }
    }


        $(document).ready(function () {
            $('#StartDiscountTime').datepicker({
                dateFormat: "yy/MM/dd",
                changeMonth: true,
                changeYear: true
            });
        });

        $(document).ready(function () {
            $('#EndDiscountTime').datepicker({
                dateFormat: "yy/MM/dd",
                changeMonth: true,
                changeYear: true
            });
        });
    $("#SaveButton").click(function () {



        var DiscountFormData = new FormData;
        var Name = $("#DiscountName").val();
        var Description = $("#DescriptionDiscount").val();
        var DiscountImage = $("#DiscountImageView")[0].files[0];
        var Preceint = $("#Discountpreceint").val();
        var DiscountEnabled = $("#DiscountEnabledTrue").val();
        var StartDisocunt = $("#StartDiscountTime").val();
        var EndDiscount = $("#EndDiscountTime").val();


        DiscountFormData.append("Name", Name);
        DiscountFormData.append("Description", Description);
        DiscountFormData.append("DiscountImage", DiscountImage);
        DiscountFormData.append("DiscountPreceint", Preceint);
        DiscountFormData.append("enabled", DiscountEnabled);
        DiscountFormData.append("StartDiscount", StartDisocunt);
        DiscountFormData.append("EndDiscount", EndDiscount);

        $.ajax({
            url: "@Url.Action("Action","Discounts")",
            type: "POST",
            processData: false,
            contentType: false,
            data: DiscountFormData,
        }).done(function (response) {
            debugger;
            if (response.Success) {
                location.reload();
            } else {
                $("#ErrorDiscount").html(response.Message);
            }
        });

    });






    </script>
