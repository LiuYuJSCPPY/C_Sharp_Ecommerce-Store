@model EcommerceStore.Model.Discount

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">刪除 @Model.Name 活動</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form id="ActionForm">
            <input type="hidden" name="Id" value="@Model.Id">
        </form>
        <div class="alert alert-danger" role="alert">
            你確定要刪除嗎?
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
        <button id="DeleteButton" type="button" class="btn btn-primary">刪除</button>
    </div>

</div>

<div class="alert alert-danger" role="alert" id="ErrorDiscount">

</div>
<script>
    $("#DeleteButton").click(function () {
        $.ajax({
            url: "@Url.Action("Delete", "Discounts")",
            type: "post",
            data: $("#ActionForm").serialize(),
        }).done(function (respsone) {
            debugger;
            if (respsone.Success) {
                window.location.href = "@Url.Action("Index", "Discounts")";
            } else {
                $("#ErrorDiscount").html(respsone.Message)
            }
        });
    });
</script>








