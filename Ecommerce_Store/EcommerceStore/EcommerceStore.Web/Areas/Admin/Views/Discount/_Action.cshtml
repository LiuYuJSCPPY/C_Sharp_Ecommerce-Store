
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">折扣活動</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <form id="ActionForm">
            <div class="mb-3">
                <h4 for="exampleInputEmail1" class="form-label">活動名稱</h4>
                <input type="text" class="form-control" id="DiscountName" name="Name" aria-describedby="emailHelp">
            </div>

            <div class="mb-3">
                <h4 for="exampleInputEmail1" class="form-label">折扣</h4>
                <input type="number" step=0.01 class="form-control" id="Discountpreceint" name="DiscountPreceint">
            </div>

            <div class="mb-3">

                <div class="row g-2">

                    <div class="col">
                        <label class="form-label">開始日期</label>
                        <input type="date" id="StartDiscountTime" name="StartDiscount" class="form-control" aria-label="開始日期">
                    </div>
                    <div class="col">
                        <label class="form-label">結束日期</label>
                        <input type="date" id="EndDiscountTime" name="EndDiscount" class="form-control" aria-label="結束日期">
                    </div>
                </div>
            </div>


            <div class="mb-3">
                <h4 class="form-label">活動內容</h4>
                <div class="form-floating">
                    <textarea class="form-control" id="DescriptionDiscount" name="Description" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                    <label for="floatingTextarea2">內容</label>
                </div>
            </div>

            <div class="mb-3">
                <h4 for="formFile" class="form-label">活動圖片</h4>
                <input id="DiscountImage" class="form-control" name="DescriptImage" type="file" id="formFile">
                <div class="text-center">
                    <img id="DiscountImageView" src="" class="rounded" width="200">
                </div>

            </div>



            <div class="form-check">
                <input class="form-check-input" type="radio" value="ture" name="enabled" id="DiscountEnabled">
                <label class="form-check-label">
                    開啟
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" value="false" name="enabled" id="DiscountEnabled" checked>
                <label class="form-check-label">
                    關閉
                </label>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
        <button id="SaveButton" type="button" class="btn btn-primary">儲存</button>
    </div>
    <div class="alert alert-danger" role="alert" id="ErrorDiscount">

    </div>
</div>



<script>
    $("#DiscountImage").change(function () {
        readURL(this);
    });
    function readURL(input) {
        if (input.files && input.files[0]) {
            var vendor = new FileReader();
            vendor.onload = function (e) {
                $("#DiscountImageView").attr("src", e.target.result);
            }
            vendor.readAsDataURL(input.files[0]);
        }
    }

    $("#SaveButton").click(function () {

        var DiscountFormData = new FormData;
        var Name = $("#DiscountName").val();
        var Description = $("#DescriptionDiscount").val();
        var Discountfile = $("#DiscountImage")[0].files[0];
        var Preceint = $("#Discountpreceint").val();
        var DiscountEnabled = $("#DiscountEnabled").val();
        var StartDisocunt = $("#StartDiscountTime").val();
        var EndDiscount = $("#EndDiscountTime").val();
        

        DiscountFormData.append("Name", Name);
        DiscountFormData.append("Description", Description);
        DiscountFormData.append("DescriptionImage", Discountfile);
        DiscountFormData.append("DiscountPreceint", Preceint);
        DiscountFormData.append("enabled", DiscountEnabled);
        DiscountFormData.append("StartDiscount", StartDisocunt);
        DiscountFormData.append("EndDiscount", EndDiscount);

        $.ajax({
            url: "@Url.Action("Action","Discount")",
            type: "POST",
            data: DiscountFormData,
        }).done(function (response) {
            debugger;
            if (response.Success) {
                location.reload();
            } else {
                $("#ErrorDiscount").html(response.Message);
            }
        });

    });





    
</script>