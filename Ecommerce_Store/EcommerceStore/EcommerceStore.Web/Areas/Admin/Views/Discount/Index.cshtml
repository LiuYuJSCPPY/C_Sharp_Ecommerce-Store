@model EcommerceStore.Web.Areas.Admin.ViewModel.EcommerceStoreDiscountList


<h1 class="mt-4">活動折扣</h1>
<ol class="breadcrumb p-3 pb-md-4 mx-auto text-center">
    <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
    <li class="breadcrumb-item active">Sidenav Light</li>
</ol>



<!-- Button trigger modal -->
<button id="CreateButton" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ActionModal">
    新增
</button>


<div class="table-responsive">
    <table class="table table-sm table-bordered align-middle">
        <thead>
            <tr>
                <th></th>
                <th>名字</th>
                <th>介紹</th>
                <th>折扣</th>
                <th>活動日期</th>
                <th>圖片</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var Discount in Model.discounts)
                {
                    <td>@Discount.Id</td>

                    <td>@Discount.Name</td>
                    <td>@Discount.DiscountPreceint</td>
                    <td>@Discount.Description</td>
                    <td>
                        <img src="@Url.Content(Discount.DescriptImage)" title="@Discount.Name" />
                    </td>
                    <td>
                        <img src="@Url.Content(Discount.DescriptImage)" title="@Discount.Name" />
                    </td>
                }

            </tr>
        </tbody>
    </table>
</div>



<!-- Modal -->
<div class="modal fade" id="ActionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">

    </div>
</div>


<script>
    $("#CreateButton").click(function () {
        $.ajax({
            url: "@Url.Action("Action", "Discount")",

        }).done(function (response) {
            $("#ActionModal .modal-dialog").html(response);
        });
    });
</script>