@model EcommerceStore.Web.Areas.Admin.ViewModel.EcommerceStoreDiscountList
@{
    ViewBag.Title = "_Listing";
}


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">編號</th>
            <th scope="col">名字</th>
            <th scope="col">圖片</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var Discount in Model.discounts)
        {
        <tr>
            <th scope="row">@Discount.Id</th>
            <td colspan="2" class="table-active">@Discount.Name</td>
            <td colspan="2" class="table-active">@Discount.Description</td>
            <td>
                <img src="" title="" />
            </td>
            <td>
                <button id="ActionButton"  type="button" class="data-btn btn btn-success"  >更新</button>
                <button type="button" class="data-btn btn btn-danger" ><i class="fas fa-trash-alt mr-1"></i>刪除</button>
            </td>
        </tr>
        }
    </tbody>
</table>